[push]
  default = tracking
[user]
  name = Charles Lavery
  email = charles.lavery@gmail.com
[include]
  path = ~/.gitconfig-local
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[alias]
  co = checkout
  cm = commit
  s = status --short -b
  a = add
  last = difftool HEAD^..HEAD --
  new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
  graph = log --all --graph --decorate --oneline -n30
  lg = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(cyan bold)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
  forkdiff = !bash -c 'git diff $(git merge-base "$1" "$2") "$2" "${@: 3}" ' -
  l = "!. ~/.githelpers && pretty_git_log"
  hp = "!. ~/.githelpers && show_git_head"
  # interactive add with fzf (not the same as patch add)
  ia = !git ls-files -m | fzf -m | xargs git add
  ic = !git ls-files -m | fzf -m | xargs git co
  # interactive select diff targets then difftool them
  d = !git ls-files -m | fzf -m | xargs -o git difftool
[core]
  excludesfile = ~/.gitignore
  #pager = less -FRSX
  pager = bash -lc 'diff-highlight | strip_diff_leading_symbols | less -r' -
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[color "branch"]
  current = magenta
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[merge]
  tool = fugitive
  conflictstyle = diff3
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "gvimdiff"]
  path = mvim
[mergetool "fugitive"]
  cmd = mvim -f -v -d -c \"Gdiff | wincmd J\" \"$MERGED\"
[diff]
  tool = vimdiff
[difftool "vimdiff"]
  cmd = mvim -f -v -d \"$LOCAL\" \"$REMOTE\"

[tig]
  line-graphics = utf-8
  focus-child = false
  main-view = date:relative author:full id:yes commit-title:graph=yes,refs=yes
[tig "color"]
  cursor = yellow black bold
  title-focus = yellow black
  title-blur = cyan black

[diff "gpg"]
  textconv = gpg --decrypt
[mergetool "nbmerge"]
  cmd = nbmerge $LOCAL $BASE $REMOTE $MERGED
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path = 
[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
