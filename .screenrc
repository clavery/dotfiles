encoding UTF-8
altscreen on
#attrcolor b ".I"

startup_message off
bind ^p source .screenrc
hardstatus alwayslastline '%{= g}[ %{= b}%l%{-} ][ %{= g}%-w%{-}%{= r}%n %t%{-}%{= g}%+w%{-} %=][ %{= r}task%{-} ]%{-}'
caption always "%{= Ck}%?%F%{.K.}%?%h %="
#mousetrack on
vbell off
defscrollback 5000
#termcapinfo xterm* ti@:te@
shell -${SHELL}

#termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce "on"
