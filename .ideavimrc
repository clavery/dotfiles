let mapleader = " "

set clipboard=ideaput

set ignorecase
set smartcase
set scrolloff=3         " 3 lines above/below cursor when scrolling
set ideajoin
set incsearch
set surround
set commentary
set keymodel=stopsel

set visualbell
set noerrorbells


nmap <c-h> <c-w>h
nmap <c-l> <c-w>l
nmap <c-k> <c-w>k
nmap <c-j> <c-w>j

nmap <c-e> :action RecentFiles<cr>
nmap g<c-e> :action RecentLocations<cr>
nmap <c-p> :action GotoFile<cr>
nmap <c-s> :action FileStructurePopup<cr>
nmap <leader>g :action GotoDeclaration<cr>
nmap <leader>b :action Back<cr>
nmap <leader>f :action Forward<cr>
nmap <leader>d :action QuickJavaDoc<CR>
nmap <leader>p :action ParameterInfo<CR>


nmap <leader>t :action GotoFile<cr>
nmap <leader>c :action GotoClass<cr>
nmap <leader>ns :action GotoSymbol<cr>
nmap <leader>nm :action FileStructurePopup<cr>
nmap <leader>d :action ShowErrorDescription<cr>
nmap == :action ReformatCode<cr>
